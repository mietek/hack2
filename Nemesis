
nemesis = do
  
  clean
    [ "**/*.hi"
    , "**/*.o"
    , "manifest"
    , "main"
    , "nemesis-tmp.*"
    ]
  

  desc "prepare cabal dist"
  task "dist" $ do
    sh "cabal clean"
    sh "cabal configure"
    sh "cabal sdist"



  desc "start console"
  task "i" - do
    sh "ghci -isrc src/Hack2.hs"
    

  desc "run hello world"
  task "hello" - do
    sh "ghci -iexample example/hello.hs"
