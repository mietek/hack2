
nemesis = do
  
  clean
    [ "**/*.hi"
    , "**/*.o"
    , "manifest"
    , "main"
    , "nemesis-tmp.*"
    ]
  

  desc "prepare cabal dist"
  task "dist" $ do
    sh "cabal clean"
    sh "cabal configure"
    sh "cabal sdist"



  desc "start console"
  task "i" - do
    sh "ghci -isrc src/Hack2.hs"
    

  desc "run hello1"
  task "h1" - do
    sh "runghc -iexample example/hello1.hs"
    
    
  desc "run hello2"
  task "h2" - do
    sh "runghc -iexample example/hello2.hs"


  desc "run hello3"
  task "h3" - do
    sh "runghc -iexample example/hello3.hs"